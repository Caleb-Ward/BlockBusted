@model IEnumerable<MovieRentals_20020992.Models.MovieImage>

@{
    ViewBag.Title = "Images";
}

<h2>@ViewBag.Title</h2>
<p class="btn btn-primary">
    @Html.ActionLink("Upload New Image", "Upload")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <p class="movieImage"><b>@Html.DisplayNameFor(model => model.FileName)</b>
            @Html.DisplayFor(modelItem => item.FileName)</p>
                @if (!String.IsNullOrWhiteSpace(item.FileName))
                {
                    <img src="@(Url.Content(Constants.MovieImagePath) + item.FileName)" height="275" width="200">
                }
                <span>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </span>
            </div>
        }

</div>

